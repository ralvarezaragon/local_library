#
# The MySQL database server configuration file.
#
# You can copy this to one of:
# - "/etc/mysql/my.cnf" to set global options,
# - "~/.my.cnf" to set user-specific options.
# 
# One can use all long options that the program supports.
# Run program with --help to get a list of available options and with
# --print-defaults to see which it would actually understand and use.
#
# For explanations see
# http://dev.mysql.com/doc/mysql/en/server-system-variables.html

# This will be passed to all mysql clients
# It has been reported that passwords should be enclosed with ticks/quotes
# escpecially if they contain "#" chars...
# Remember to edit /etc/mysql/debian.cnf when changing the socket location.
[client]
port		= 3306
socket		= /var/run/mysqld/mysqld.sock
user		= nobody
#host		= 127.0.0.1 
host		= 10.0.3.53

# Here is entries for some specific programs
# The following values assume you have at least 32M ram

# This was formally known as [safe_mysqld]. Both versions are currently parsed.
[mysqld_safe]
socket		= /var/run/mysqld/mysqld.sock
nice		= 0

[mysqld]
#
# * Basic Settings
#
user		= mysql
pid-file	= /var/run/mysqld/mysqld.pid
socket		= /var/run/mysqld/mysqld.sock
port		= 3306
basedir		= /usr
datadir		= /var/lib/mysql
tmpdir		= /tmp
lc-messages-dir	= /usr/share/mysql
skip-external-locking
default-storage-engine=InnoDB
performance_schema = 0
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"
#
# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
bind-address		= *
#bind-address		= 127.0.0.1
#
# * Fine Tuning
#
tmp_table_size 		= 32M
max_heap_table_size	= 32M
key_buffer_size		= 32M
max_allowed_packet	= 64M
thread_stack		= 192K
thread_cache_size       = 1024
max_prepared_stmt_count	= 100000
# This replaces the startup script and checks MyISAM tables if needed
# the first time they are touched
# myisam-recover		= BACKUP
max_connections		= 10000
table_open_cache	= 4096
open_files_limit	= 65535
table_definition_cache	= 4096

#
# * Query Cache Configuration
#
#have_query_cache	= no
query_cache_type	= 0
query_cache_limit	= 0
query_cache_size        = 0
#
# * Logging and Replication
#
# Both location gets rotated by the cronjob.
# Be aware that this log type is a performance killer.
# As of 5.1 you can enable the log at runtime!
#general_log_file        = /var/log/mysql/mysql.log
#general_log             = 1
#
# Error logging goes to syslog due to /etc/mysql/conf.d/mysqld_safe_syslog.cnf.
#
# Here you can see queries with especially long duration
log_error               = /var/log/mysql/mysql-error.log
slow-query-log          = 1
slow_query_log_always_write_time = 1
slow-query-log-file     = /var/log/mysql/mysql-slow.log
long_query_time         = 10
slow_query_log_use_global_control = long_query_time
#slow_query_log_use_global_control = long_query_time

#
# The following can be used as easy to replay backup logs or for replication.
# note: if you are setting up a replication slave, see README.Debian about
#       other settings you may need to change.
#server-id		= 1
#log_bin			= /var/log/mysql/mysql-bin.log
#expire_logs_days	= 14
sync_binlog		= 0
back_log = 200
#max_binlog_size         = 100M
#binlog_do_db		= include_database_name
#binlog_ignore_db	= include_database_name
#
# * InnoDB
#
# InnoDB is enabled by default with a 10MB datafile in /var/lib/mysql/.
# Read the manual for more InnoDB related options. There are many!
skip_name_resolve
innodb_file_per_table
innodb_buffer_pool_size=44G
innodb_buffer_pool_instances=16
innodb_write_io_threads=16
innodb_log_file_size=512M
innodb_log_buffer_size=4M
innodb_flush_method = O_DIRECT
innodb_log_files_in_group = 2
#innodb_flush_log_at_trx_commit = 1 #as percona
innodb_flush_log_at_trx_commit = 0 
innodb_stats_on_metadata = off 
innodb_thread_concurrency = 16
innodb_concurrency_tickets = 100000

#################### Percona cluster configuration #############
################################################################
# Path to Galera library
wsrep_provider=/usr/lib/libgalera_smm.so

#wsrep_provider=none

#Some tunning to increase buffers
wsrep_provider_options= "gcache.size=24G; gcs.fc_limit=512"
# Cluster connection URL contains the IPs of node#1, node#2 and node#3
# This line is ignore when bootstrapping. Only required for new nodes joining the cluster
# wsrep_cluster_address=gcomm://10.0.3.22,10.0.3.23
#wsrep_cluster_address=gcomm://10.0.3.21,10.0.3.22,10.0.3.23
wsrep_cluster_address=gcomm://10.0.3.50,10.0.3.51
#wsrep_sst_donor=10.0.3.50
wsrep_sst_donor=stats2
# In order for Galera to work correctly binlog format should be ROW
binlog_format=ROW

# MyISAM storage engine has only experimental support
default_storage_engine=InnoDB

# This changes how InnoDB autoincrement locks are managed and is a requirement for Galera
innodb_autoinc_lock_mode=2

# This node  address
wsrep_node_address=10.0.3.53

# SST method
wsrep_sst_method=xtrabackup-v2

# Cluster name
wsrep_cluster_name=two_cluster

# Authentication for SST method - user required for replication
wsrep_sst_auth="sstuser"

# Change NUMA to interleave in order to allocate memoery in a balanced way
# For more info go here https://blog.jcole.us/2010/09/28/mysql-swap-insanity-and-the-numa-architecture/
innodb_numa_interleave = 1
#####################################################################

